<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6A7A7"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".PlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/songnameView"
            android:layout_marginTop="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="songname"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="italic|bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/singerView"
            android:layout_marginBottom="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="singer"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:id="@+id/imageview"
            android:layout_marginBottom="8dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/watermelon"
            android:background="@color/colorPrimaryDark">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp">
            </SeekBar>

            <TextView
                android:id="@+id/txtsstop"
                android:layout_toRightOf="@+id/seekBar"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="false"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/playButton"
                android:layout_centerHorizontal="true"
                android:background="@drawable/play_icon"
                android:onClick="playAction"
                android:layout_width="70dp"
                android:layout_height="70dp">
            </Button>

            <Button
                android:id="@+id/forwardButton"
                android:layout_toRightOf="@+id/playButton"
                android:layout_marginTop="15dp"
                android:background="@drawable/next_icon"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </Button>

            <Button
                android:id="@+id/rewindButton"
                android:layout_toLeftOf="@+id/playButton"
                android:layout_marginTop="15dp"
                android:background="@drawable/prev_icon"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </Button>

            <Button
                android:id="@+id/fforwardButton"
                android:layout_toRightOf="@id/forwardButton"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fforward_icon"
                android:onClick="forwardAction"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </Button>

            <Button
                android:id="@+id/rrewindButton"
                android:layout_toLeftOf="@id/rewindButton"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rrewind_icon"
                android:onClick="rewindAction"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>